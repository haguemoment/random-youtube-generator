<body>
    <div class="container">
        <h1>Random YouTube Video Generator</h1>
        
        <div class="search-container">
            <div class="current-search" id="currentSearch">
                Click "Generate Random Search" to discover hidden YouTube gems!
            </div>
            
            <button onclick="generateAndSearch()">Generate Random Search</button>
            
            <div class="strategy-info" id="strategyInfo">
                This generator finds authentic, low-view content by using camera naming patterns, generic titles, and broad topic combinations.
            </div>
        </div>
        
        <div class="content">
            <h2>Discover Authentic YouTube Content Hidden from Algorithms</h2>
            <p>Welcome to the ultimate random YouTube discovery tool designed to uncover genuine, unpolished content that algorithms never surface. This generator specifically targets low-engagement, authentic videos - the kind of personal, amateur, and wonderfully weird content that makes YouTube truly special.</p>
            
            <p>Our system combines multiple discovery strategies to find hidden gems: default camera file names (like "IMG_1234" or "VID_20210315"), low view count filtering, older upload targeting, and endless topic generation spanning everything from hobbies and daily life to niche interests and personal projects. You'll discover content from real people sharing genuine moments, amateur tutorials, personal vlogs, school projects, and countless other authentic experiences.</p>
            
            <p>Unlike algorithmic recommendations that trap you in content bubbles, this random generator opens up the entire spectrum of YouTube's user-generated content. Each search query is crafted to bypass popular, commercial content and instead surface videos with under 1000 views, generic titles, and no commercial intent - exactly the type of authentic content that feels truly random and endlessly watchable.</p>
            
            <p>Break free from the algorithm and start discovering the real YouTube - click the button above to generate your first random search and begin exploring the authentic, unfiltered creativity of millions of users around the world!</p>
        </div>
    </div>

    <script>
        // Camera naming patterns
        const cameraPatterns = [
            'IMG_', 'VID_', 'DSC_', 'MOV_', 'MVI_', 'DSCN', 'P_', 'PICT', 'VIDEO_'
        ];
        
        // Generic/amateur indicators
        const genericTerms = [
            'untitled', 'video', 'clip', 'test', 'recording', 'new video', 
            'my video', 'check this out', 'random', 'just me', 'trying',
            'first time', 'attempt', 'practice', 'experiment', 'draft'
        ];
        
        // Broad topic categories for endless variety
        const topics = [
            'cooking', 'music', 'art', 'pets', 'garden', 'travel', 'workout', 'dance',
            'reading', 'writing', 'drawing', 'singing', 'playing', 'building', 'fixing',
            'cleaning', 'organizing', 'studying', 'learning', 'teaching', 'explaining',
            'showing', 'trying', 'testing', 'reviewing', 'unboxing', 'making', 'creating',
            'walking', 'driving', 'shopping', 'eating', 'talking', 'thinking', 'planning',
            'working', 'relaxing', 'sleeping', 'waking', 'morning', 'evening', 'night',
            'weekend', 'holiday', 'birthday', 'party', 'meeting', 'gathering', 'event',
            'project', 'homework', 'assignment', 'presentation', 'demo', 'tutorial',
            'guide', 'tip', 'trick', 'hack', 'idea', 'thought', 'opinion', 'story',
            'memory', 'experience', 'adventure', 'journey', 'trip', 'visit', 'explore',
            'discover', 'find', 'see', 'watch', 'listen', 'hear', 'feel', 'touch',
            'taste', 'smell', 'enjoy', 'love', 'like', 'hate', 'dislike', 'prefer',
            'choose', 'decide', 'pick', 'select', 'compare', 'contrast', 'analyze',
            'discuss', 'debate', 'argue', 'agree', 'disagree', 'understand', 'confuse'
        ];
        
        // Common objects and activities for more variety
        const objects = [
            'phone', 'computer', 'car', 'bike', 'book', 'movie', 'game', 'toy',
            'clothes', 'shoes', 'food', 'drink', 'coffee', 'tea', 'water', 'juice',
            'pizza', 'sandwich', 'salad', 'soup', 'cake', 'cookie', 'bread', 'fruit',
            'vegetable', 'meat', 'fish', 'chicken', 'pasta', 'rice', 'cheese', 'milk',
            'house', 'room', 'kitchen', 'bedroom', 'bathroom', 'living room', 'garage',
            'garden', 'yard', 'park', 'street', 'store', 'mall', 'restaurant', 'cafe',
            'school', 'office', 'work', 'gym', 'hospital', 'church', 'library', 'museum'
        ];
        
        // Years for temporal diversity
        const years = Array.from({length: 15}, (_, i) => 2010 + i); // 2010-2024
        
        function getRandomElement(array) {
            return array[Math.floor(Math.random() * array.length)];
        }
        
        function getRandomNumber(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }
        
        function generateRandomSearch() {
            const strategies = [
                generateCameraPattern,
                generateGenericWithTopic,
                generateTopicCombination,
                generateYearBasedSearch,
                generateSimpleGeneric
            ];
            
            const strategy = getRandomElement(strategies);
            return strategy();
        }
        
        function generateCameraPattern() {
            const pattern = getRandomElement(cameraPatterns);
            const number = getRandomNumber(1000, 9999);
            return {
                query: `"${pattern}${number}"`,
                strategy: "Camera naming pattern - targets default camera file names"
            };
        }
        
        function generateGenericWithTopic() {
            const generic = getRandomElement(genericTerms);
            const topic = getRandomElement(topics);
            const year = getRandomElement(years);
            return {
                query: `"${generic} ${topic}" ${year}`,
                strategy: "Generic title + topic - finds amateur attempts at various activities"
            };
        }
        
        function generateTopicCombination() {
            const topic1 = getRandomElement(topics);
            const topic2 = getRandomElement(objects);
            const modifier = getRandomElement(['my', 'new', 'old', 'first', 'last', 'best', 'worst']);
            return {
                query: `"${modifier} ${topic1} ${topic2}"`,
                strategy: "Topic combination - discovers personal projects and experiences"
            };
        }
        
        function generateYearBasedSearch() {
            const year = getRandomElement(years);
            const month = getRandomNumber(1, 12).toString().padStart(2, '0');
            const topic = getRandomElement(topics);
            return {
                query: `${topic} ${year} ${month}`,
                strategy: "Date-based search - finds content from specific time periods"
            };
        }
        
        function generateSimpleGeneric() {
            const topic = getRandomElement(topics);
            const object = getRandomElement(objects);
            return {
                query: `${topic} ${object}`,
                strategy: "Simple combination - broad search for authentic content"
            };
        }
        
        function generateAndSearch() {
            const searchData = generateRandomSearch();
            const query = searchData.query;
            const strategy = searchData.strategy;
            
            // Update display
            document.getElementById('currentSearch').textContent = `Searching for: ${query}`;
            document.getElementById('strategyInfo').textContent = `Strategy: ${strategy}`;
            
            // Create YouTube search URL with filters for low-engagement content
            const encodedQuery = encodeURIComponent(query);
            const youtubeUrl = `https://www.youtube.com/results?search_query=${encodedQuery}&sp=CAISAhAB`; // Sort by upload date
            
            // Open in new tab
            window.open(youtubeUrl, '_blank');
        }
        
        // Generate initial search on page load
        window.onload = function() {
            const initialSearch = generateRandomSearch();
            document.getElementById('currentSearch').textContent = `Ready to search for: ${initialSearch.query}`;
            document.getElementById('strategyInfo').textContent = `Strategy: ${initialSearch.strategy}`;
        };
    </script>
</body>
